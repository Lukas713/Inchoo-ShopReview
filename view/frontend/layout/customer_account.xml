<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="customer_account_navigation">
            <block class="Magento\Customer\Block\Account\SortLinkInterface" name="customer_store_reviews"
                   cacheable="false">
                <arguments>
                    <argument name="label" xsi:type="string">My Store Review</argument>
                    <argument name="path" xsi:type="string">store_review/customer</argument>
                    <argument name="sortOrder" xsi:type="number">250</argument>
                </arguments>
            </block>
            <block class="Magento\Customer\Block\Account\SortLinkInterface" name="store_reviews" cacheable="false">
                <arguments>
                    <argument name="label" xsi:type="string">What customers say about us</argument>
                    <argument name="path" xsi:type="string">store_review/reviews</argument>
                    <argument name="sortOrder" xsi:type="number">0</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>